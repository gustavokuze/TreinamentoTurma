@model TreinamentoTurma.Models.Inscricao

@{
    /**/

    ViewBag.Title = "Inscrição";
} 

<h2>Inscrição</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col">
        <div class="container">
            @using (Html.BeginForm("Inscricao", "Turma", FormMethod.Post, new { }))
            {
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.AlunoId)
                        @Html.Label("Turmas")
                        @Html.DropDownListFor(m => m.TurmaId, ViewBag.Turmas as List<SelectListItem>, "Selecione", new { @class = "form-control" })

                    </div>
                </div>
                <button class="btn btn-default" type="submit">Inscrever-se</button>
            }
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
