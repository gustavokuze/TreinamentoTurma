@model TreinamentoTurma.Areas.Painel.ViewModel.AlunoViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar aluno</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@{
    if (TempData["Sucesso"] != null) 
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Sucesso!</strong> @TempData["Sucesso"]
        </div>
    }
}

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Cadastrar", "Aluno", FormMethod.Post, new { }))
        {
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome)
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Telefone)
                    @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Endereco)
                    @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Endereco, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.DataNascimento)
                    @*@Html.TextBoxFor(m => m.DataNascimento, "{0:dd/MM/yyyy}", new { @class = "form-control input-nascimento" })*@
                    @Html.EditorFor(m => m.DataNascimento, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DataNascimento, "", new { @class = "text-danger" })
                </div>
            </div>
            <button class="btn btn-default" type="submit">Cadastrar Aluno</button>
        }
    </div>
</div>

@* responsável por ler os scripts da section quando ela for carregada *@

@section Scripts {
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/jqueryval")
}