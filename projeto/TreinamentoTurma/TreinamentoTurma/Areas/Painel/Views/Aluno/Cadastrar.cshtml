@model TreinamentoTurma.Models.Aluno

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Cadastrar", "Aluno", FormMethod.Post, new { }))
        {
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome)
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.DataNascimento)
                    @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control input-nascimento"})
                    @Html.ValidationMessageFor(m => m.DataNascimento, "", new { @class = "text-danger" })
                </div>
            </div>
            <button class="btn btn-default" type="submit">Cadastrar</button>
        }
    </div>
</div>

@* responsável por ler os scripts da section quando ela for carregada *@

@section Scripts {
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/jqueryval")

    

}